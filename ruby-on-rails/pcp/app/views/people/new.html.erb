<%= simple_form_for @person, html: {class: 'form-inline'} do |f| %>
  <%= f.input :name %>
  <%= f.input :birthday %>
  <%= f.input :document %>
  <%= f.input :mothers_name %>
  <%= f.input :address %>
  <%= f.input :number %>
  <%= f.input :zip_code %>
  <%= f.input :district %>
  <%= f.input :phone_number %>
  <%= f.input :tv_type, collection: 18..60, prompt: 'Selecione o tipo de TV a cabo contratada' %>
  <%= f.input :contract_number %>
  <%= f.input :date %>

  <%= f.input :account_agency %>
  <%= f.input :account_number %>
  <%= f.input :account_bank  %>
  <%= f.submit %>
<% end %>
